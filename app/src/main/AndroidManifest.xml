<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.composeapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ComposeApp">
        <activity
            android:name=".AnimationActivity"
            android:exported="true"
            android:label="@string/title_activity_animation"
            android:theme="@style/Theme.ComposeApp.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ListActivity"
            android:exported="true"
            android:label="@string/title_activity_list"
            android:theme="@style/Theme.ComposeApp.NoActionBar">
        </activity>
        <activity
            android:name=".SnackbarActivity"
            android:exported="true"
            android:label="@string/title_activity_snackbar"
            android:theme="@style/Theme.ComposeApp.NoActionBar" />
        <activity
            android:name=".StateActivity"
            android:exported="true"
            android:label="@string/title_activity_state"
            android:theme="@style/Theme.ComposeApp.NoActionBar" />
        <activity
            android:name=".ConstraintsEffectsActivity"
            android:exported="true"
            android:label="@string/title_activity_constraints_effects"
            android:theme="@style/Theme.ComposeApp.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ComposeApp.NoActionBar" />
    </application>

</manifest>